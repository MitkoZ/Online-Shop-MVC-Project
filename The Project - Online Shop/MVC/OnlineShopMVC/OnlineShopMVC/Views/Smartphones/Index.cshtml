@using OnlineShopMVC.ViewModels
@using OnlineShopMVC.Helpers;
@model SearchViewModel<SmartphonesViewModel>
@{
    ViewBag.Title = "Index";
}
<h2>Smartphones</h2>
@if (LoginUserSession.Current.isAdmin)
{
    <div class="table-actions">
        @Html.ActionLink("Add New Smartphone", "Edit", "Smartphones", null, new { @class = "btn btn-primary btn-sm" })
    </div>
}
@Html.ActionLink("Name", "Index", new { sortColumn = "Name", direction = Model.LastSortColumn == "Name" && Model.LastSortDirection != "Desc" ? "Desc" : "", Name = Request.QueryString["Name"], categoryID = Request.QueryString["CategoryID"] })
@Html.ActionLink("Price", "Index", new { sortColumn = "Price", direction = Model.LastSortColumn == "Price" && Model.LastSortDirection != "Desc" ? "Desc" : "", Name = Request.QueryString["Price"], categoryID = Request.QueryString["CategoryID"] })
@foreach (SmartphonesViewModel item in Model.SearchItems)
{

    <table width="100">
        <tr width="30">
            <td>
                <a href="@Url.Action("Details","Smartphones",new RouteValueDictionary(new { id = item.ProductId }))">
                    <img src="@Url.Content(item.ImagePath)" width="150" height="150" />
                </a>
            </td>
            <td>
                @item.SmartphonesInfo
            </td>
            <td style="font-size:30px; color:red;">
                @item.Price leva
            </td>
        </tr>      
            @if (LoginUserSession.Current.isAdmin)
            {
                <tr>
                    <td class="cell-small">
                        @Html.ActionLink("Edit", "Edit", "Smartphones", new { ProductId = item.ProductId }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                    <td class="cell-small">
                        @Html.ActionLink("Delete", "Delete", "Smartphones", new { id = item.ProductId }, new { onclick = "return confirm('Are you sure you want to delete this item?');", @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        
    </table>
}