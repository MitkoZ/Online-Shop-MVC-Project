@using OnlineShopMVC.ViewModels
@model CityViewModel
@{
    ViewBag.Title = "AddCity";
}

<h2>Add City</h2>
@using (Html.BeginForm("AddCity", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   <div class="form-group">
       <label class="control-label col-md-2" for="Name"> City Name</label>
       <div class="col-md-10">
           @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
           @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
       </div>
   </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary normal-button" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
}